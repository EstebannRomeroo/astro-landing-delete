---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-center text-5xl my-5">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col text-center md:text-left md:flex-row px-4">
      <div class="flex-1">
        <h2 class="text-2xl my-4">{project.title}</h2>
        <p class="text-1xl text-justify">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-2 my-2 hover:bg-indigo-400 rounded-2xl">
          More info
        </button>
      </div>
      <div class="flex-1">
        <img
          src={project.img}
          class="w-72 m-auto mt-5"
          alt={project.title}
          loading="lazy"
        />
      </div>
    </div>
  ))
}
